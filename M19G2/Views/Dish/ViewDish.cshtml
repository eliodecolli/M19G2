@model M19G2.Models.ViewDishModel

@{
    ViewBag.Title = "ViewDish";
}

<div class="jumbotron text-center">
    <h1>@Model.Dish.Name</h1>
    <div id="carouselShowPlace">
        @{
            if (Model != null && Model.Dish.ImagesId.Count > 0)
            {
                <div id="displayDishes" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="displayDishes" data-slide-to="0" class="active"></li>
                        @for (int i = 1; i < Model.Dish.ImagesId.Count; i++)
                        {
                            <li data-target="displayDishes" data-slide-to="@i"></li>
                        }
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/Dish/ShowDishImage?imageId=@Model.Dish.ImagesId[0]" />
                        </div>
                        @for (int i = 1; i < Model.Dish.ImagesId.Count; i++)
                        {
                            <div class="carousel-item">
                                <img src="/Dish/ShowDishImage?imageId=@Model.Dish.ImagesId[i]" />
                            </div>
                        }
                        <a class="carousel-control-prev" href="#displayDishes" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#displayDishes" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            }
            else
            {
                <p>There are no images available for this dish :(</p>
            }
        }
    </div>
</div>


<hr />

<div class="row">
    <div class="col-md-9">
        <h2 class="lead">Description</h2>
        <p>@Model.Dish.Description</p>
    </div>
    <div class="col-md-3">
        <h2 class="lead">Ingredients</h2>
        @{
            if (Model.Dish.Ingredients.Count > 0)
            {
                <ul class="list-group">
                    @foreach (var i in Model.Dish.Ingredients)
                    {
                        <li class="list-group-item">
                            @i.Name
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No available ingredients to show.</p>
            }
        }
    </div>
</div>