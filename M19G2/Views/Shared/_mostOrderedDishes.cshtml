@model M19G2.Models.StatisticsViewModel

@{ 
    if(Model != null && Model.Dishes.Count > 0)
    {
        <div id="displayDishes" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="displayDishes" data-slide-to="0" class="active"></li>
                @for (int i = 1; i < Model.Dishes.Count; i++)
                {
                    <li data-target="displayDishes" data-slide-to="@i"></li>
                }
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://i.imgur.com/RWJDh9I.png" alt="@Model.Dishes[0].Name" />
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@Model.Dishes[0].Name</h5>
                        <p>@Model.Dishes[0].Description</p>
                    </div>
                </div>
                @for (int i = 1; i < Model.Dishes.Count; i++)
                {
                    <div class="carousel-item">
                        <img src="https://i.imgur.com/RWJDh9I.png" alt="@Model.Dishes[i].Name" />
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@Model.Dishes[i].Name</h5>
                            <p>@Model.Dishes[i].Description</p>
                        </div>
                    </div>
                }
                <a class="carousel-control-prev" href="#displayDishes" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#displayDishes" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    }
}
